generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String   @unique              // Add username field
  email          String   @unique
  profileImage   String?  // URL or path to the user's profile image
  hashPassword   String?  // Password hash
  is2FAEnabled   Boolean  @default(false)      // Two-factor authentication status
  twoFactorSecret String?                      // Store 2FA secret (optional field if enabled)
  role            Role   @default(USER)     // Default role assigned
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
